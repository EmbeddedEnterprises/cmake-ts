{
  "name": "cmake-ts",
  "version": "0.4.0",
  "description": "cmake-js rewrite in typescript to support advanced build configurations",
  "main": "build/legacy/lib.js",
  "module": "build/modern/lib.js",
  "exports": {
    ".": {
      "require": "./build/legacy/lib.js",
      "import": "./build/modern/lib.js"
    }
  },
  "bin": "build/legacy/main.js",
  "scripts": {
    "clean": "shx rm -rf build",
    "lint": "eslint . --fix",
    "test.lint": "eslint .",
    "dev.tsc": "tsc -w --pretty",
    "dev.vite.temp": "cross-env NODE_ENV=production vite",
    "dev.vite.lib": "cross-env TARGET=lib run-s dev.vite.temp",
    "dev.vite.lib.legacy": "cross-env TARGET=lib-legacy run-s dev.vite.temp",
    "dev.vite.main": "cross-env TARGET=main run-s dev.vite.temp",
    "dev.vite.main.legacy": "cross-env TARGET=main-legacy run-s dev.vite.temp",
    "dev": "run-s clean && run-p dev.tsc dev.vite.lib dev.vite.lib.legacy dev.vite.main dev.vite.main.legacy",
    "build.tsc": "tsc --pretty",
    "build.vite.temp": "cross-env NODE_ENV=production vite build",
    "build.vite.lib": "cross-env TARGET=lib run-s build.vite.temp",
    "build.vite.lib.legacy": "cross-env TARGET=lib-legacy run-s build.vite.temp",
    "build.vite.main": "cross-env TARGET=main run-s build.vite.temp",
    "build.vite.main.legacy": "cross-env TARGET=main-legacy run-s build.vite.temp",
    "build": "run-s clean &&run-p build.tsc build.vite.lib build.vite.lib.legacy build.vite.main build.vite.main.legacy"
  },
  "files": [
    "build/**/*.js",
    "build/**/*.js.map",
    "build/**/*.d.ts",
    "build/**/*.d.ts.map"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EmbeddedEnterprises/cmake-ts.git"
  },
  "keywords": [
    "cmake",
    "nan",
    "node",
    "native",
    "addon",
    "build",
    "cmake-js"
  ],
  "author": "Amin Yahyaabadi <aminyahyaabadi74@gmail.com>",
  "contributors": [
    "Amin Yahyaabadi <aminyahyaabadi74@gmail.com>",
    "Martin Koppehel <martin@mko.dev>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EmbeddedEnterprises/cmake-ts/issues"
  },
  "homepage": "https://github.com/EmbeddedEnterprises/cmake-ts#readme",
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@types/babel__core": "~7.20.5",
    "@types/fs-extra": "~11.0.4",
    "@types/lodash": "~4.17.12",
    "@types/minizlib": "~2.1.7",
    "@types/node": "^22.7.9",
    "@types/npmlog": "~7.0.0",
    "@types/request": "~2.48.12",
    "@types/resolve": "~1.20.6",
    "@types/semver": "~7.5.8",
    "@types/tar": "^6.1.13",
    "@types/unzipper": "~0.10.10",
    "@types/url-join": "~4.0.3",
    "@types/which": "~3.0.4",
    "@upleveled/babel-plugin-remove-node-prefix": "^1.0.5",
    "cross-env": "^7.0.3",
    "eslint": "8",
    "eslint-config-atomic": "^1.22.1",
    "npm-check": "^6.0.1",
    "npm-run-all2": "^7.0.2",
    "shx": "^0.3.4",
    "typescript": "^5.6.3",
    "vite": "^6.2.2",
    "vite-plugin-babel": "^1.3.0",
    "@cypress/request": "^3.0.5",
    "fast-glob": "^3.3.2",
    "fs-extra": "^10",
    "lodash": "^4.17.21",
    "memory-stream": "1.0.0",
    "minizlib": "^2",
    "npmlog": "^6",
    "resolve": "^1.22.8",
    "semver": "^7.6.3",
    "splitargs2": "^0.1.3",
    "tar": "^6",
    "unzipper": "^0.12.3",
    "url-join": "^4.0.1",
    "which": "^2"
  },
  "packageManager": "pnpm@10.6.5",
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json"
}
